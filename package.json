{
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "lint": "biome check src/",
    "format": "biome check --apply src/",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --apply"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.1.0",
    "hono": "^3.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.2"
  },
  "volta": {
    "node": "18.18.0",
    "npm": "10.1.0"
  }
}
